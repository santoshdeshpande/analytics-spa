.row.augur.action-bar{ ng: { attr: { data: { theme: '{{ habitat.colorScheme }}' } } }}
  .small-12.columns
    .row
      .small-11.columns
        .row
          .small-3.columns.habitat-name
            {{augur.name}}
          .small-3.columns.info
            %dl
              %dt Type
              %dd Decision Tree
              %dt KPI
              %dd
                {{ augur.learningKpiLabel }}
              %dt Threshold
              %dd
                {{ augur.learningThresholdLabel }}
          .small-6.columns.actions
            %ul.no-bullet
              %li.action
                %a.action-button{ ng: { click: 'schedulePrediction()' }}
                  %span.calculate
                    %i.icon.icon-calculator
                  %span.action-label
                    Calculate new prediction
                    %br
                    %span.timestamp
                      (scheduled: {{ augur.prediction.nextTimestamp | date: 'yyyy-MM-dd HH:mm' }})
              %li.action
                %a.action-button{ ng: { href: '{{ augur.prediction.downloadPath }}' } }
                  %span.download
                    %i.icon.icon-download
                  %span.action-label
                    Download latest prediction
                    %br
                    %span.timestamp{ ng: { if: 'augur.prediction.timestamp' }}
                      (from: {{ augur.prediction.timestamp | date: 'yyyy-MM-dd HH:mm Z' }})
                    %span{ ng: { if: '!augur.prediction.timestamp' }}
                      (no prediction yet)
      .small-1.columns.back
        %a{ ui: { sref: 'dashboard' } }
          %span.download
            %i.icon.icon-exit

.row.augur.container
  .side-nav-container
    %ul.side-nav
      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.classification.home' } }
          %span.model-viewer
            %i.icon.icon-decisiontree
          %br
          Model Viewer
      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.classification.influencers' } }
          %span.influencer
            %i.icon.icon-influencer
          %br
          Influencers
      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.classification.accuracy' } }
          %span.accuracy
            %i.icon.icon-target
          %br
          Accuracy
      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.classification.performance' }, style: 'display:none;', fyi: 'only to get sref-active working' }

        %a{ ng: { click: 'activatePerformanceState()' } }
          %span.performance-drift
            %i.icon.icon-drift
          %div.label-main
            Performance Drift

        .side-nav-sub
          %ul.no-bullet.inline-list
            %li.first{ ui: { sref: { active: 'active' } } }
              %a{ ui: { sref: 'augur.classification.performance.learning' } }
                %span.performance-drift-learning
                  %i.icon.icon-gamepad
            %li{ ui: { sref: { active: 'active' } } }
              %a{ ui: { sref: 'augur.classification.performance.evaluation' } }
                %span.performance-drift-evaluation
                  %i.icon.icon-suitcase

          %div.label-sub
            Performance Drift

      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.classification.settings' } }
          %span.settings
            %icon.icon-settings
          %br
          Settings

  .main
    %div{ ui: { view: '' } }
