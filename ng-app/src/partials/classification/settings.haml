.augur-settings
  .row
    .columns.small-12
      .heading
        %h1 Augur Settings
        %h6.subheader Update the settings for this Augur

  %form.update{ name: 'form', novalidate: '', ng: { submit: 'form.$valid && submit()' } }
    .row
      .columns.small-12
        .form-body
          %augur-settings{ augur: 'augurSettings', form: 'form' }
    .row
      .columns.small-12
        .alert-box.alert{ ng: { if: 'error' } }
          {{ error }}
        .alert-box.success{ ng: { if: 'success' } }
          {{ success }}
    .row
      .columns.small-12
        .form-buttons
          .left
            %a.button.radius.delete{ ng: { click: 'delete()' } } Delete augur
          .right
            %a.button.radius.cancel{ ng: { click: 'initialize()' } } Cancel
            %input.submit.button.radius{ type: 'submit', value: 'Update augur', ng: { disabled: '!form.$valid' } }
    .row{ ng: { if: 'augur.modelDownloadPath' } }
      .columns.small-12
        .right
          %a.download-button{ ng: { href: '{{ augur.modelDownloadPath }}' } }
            %span.download
              %i.icon.icon-download
            Download PMML

