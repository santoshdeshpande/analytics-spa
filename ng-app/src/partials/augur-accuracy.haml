.row.augur-accuracy{ ng: { show: '!chartType' } }
  .columns.small-12
    %ul.small-block-grid-2.medium-block-grid-3
      %li
        .th
          %a{ ui: { sref: 'augur.accuracy-detail({ chartType: "lift" })' } }
            %h6.title Lift
            .chart.line-chart
              %d3-line-chart{ chart: 'charts.lift' }

      %li
        .th
          %a{ ui: { sref: 'dashboard' } }
            %h6.title Accumulated Lift
            .chart.line-chart
              %d3-line-chart{ chart: 'charts.accumulatedLift' }

      %li
        .th
          %a{ href: '' }
            %h6.title Response
            .chart.line-chart
              %d3-line-chart{ chart: 'charts.response' }

      %li
        .th
          %a{ href: '' }
            %h6.title Accumulated Response
            .chart.line-chart
              %d3-line-chart{ chart: 'charts.accumulatedResponse' }

      %li
        .th
          %a{ href: '' }
            %h6.title Captured Response
            .chart.line-chart
              %d3-line-chart{ chart: 'charts.capturedResponse' }

      %li
        .th
          %a{ href: '' }
            %h6.title Accumulated Captured Response
            .chart.line-chart
              %d3-line-chart{ chart: 'charts.accumulatedCapturedResponse' }

      %li
        .th
          %a{ href: '' }
            %h6.title ROC
            .chart.roc-chart
              %d3-roc-chart{ chart: 'charts.roc' }

      %li
        .th
          %a{ href: '' }
            %h6.title Misclassification
            .chart.pie-chart
              %d3-pie-chart{ chart: 'charts.misclassification', count: 'count', bucket: 'bucket' }

      %li
        .th
          %a{ href: '' }
            %h6.title Distribution of Predicted Values
            .chart.bar-chart
              %d3-bar-chart{ chart: 'charts.distributionPredictedValues' }
