.augur-performance
  .row
    .columns.small-12
      .heading
        %h3.title
          Performance drift (Evaluation)
          â€”
          %dropdown{ label: 'learning.activeIndicator.label' }
            .row.selection#selection
              .columns.small-12
                .options#options
                  %ul.no-bullet.inline-list
                    %li.left
                      %ul.no-bullet.indicators
                        %li{ ng: { repeat: 'indicator in indicators[0]', class: '{active: evaluation.activeIndicator.key===indicator.key}' } }
                          %label
                            %input{ type: 'radio', ng: { model: '$parent.evaluation.activeIndicator', value: 'indicator' } }
                            {{ indicator.label }}
                            %span.glyphicon.glyphicon-ok-circle

                    %li.middle
                      %ul.no-bullet.indicators
                        %li{ ng: { repeat: 'indicator in indicators[1]', class: '{active: evaluation.activeIndicator.key===indicator.key}' } }
                          %label
                            %input{ type: 'radio', ng: { model: '$parent.evaluation.activeIndicator', value: 'indicator' } }
                            {{ indicator.label }}
                            %span.glyphicon.glyphicon-ok-circle

                    %li.right
                      %ul.no-bullet.indicators
                        %li{ ng: { repeat: 'indicator in indicators[2]', class: '{active: evaluation.activeIndicator.key===indicator.key}' } }
                          %label
                            %input{ type: 'radio', ng: { model: '$parent.evaluation.activeIndicator', value: 'indicator' } }
                            {{ indicator.label }}
                            %span.glyphicon.glyphicon-ok-circle


        %h6.subheader Changes in the evaluation data runs over the last 30 days
  .row
    .columns.small-12
      .chart
        %d3-performance-chart{ data: 'evaluation.data', mode: 'evaluation' }
