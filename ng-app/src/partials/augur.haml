.row.augur.action-bar
  .small-6.columns
    %ul.inline-list
      %li
        %a{ ui: { sref: 'dashboard' } }
          %span.glyphicon.glyphicon-th
          Dashboard
      %li
        %span.glyphicon.glyphicon-picture
        {{habitat.name}}
      %li
        %span.glyphicon.glyphicon-eye-open
        {{augur.name}}
  .small-6.columns
    %ul.inline-list
      %li
        %button.button
          Start prediction
      %li
        %button.button
          Download predictions

.row.augur.container
  .small-2.columns.side-nav-container
    %ul.side-nav
      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.tree' } }
          %span.glyphicon.glyphicon-th
          %br
          Decision tree
      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.influencers' } }
          %span.glyphicon.glyphicon-th
          %br
          Influencers
      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.accuracy' } }
          %span.glyphicon.glyphicon-th
          %br
          Accuracy
      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.performance' }, style: 'display:none;', fyi: 'only to get sref-active working' }

        %a{ ng: { click: 'activatePerformanceState()' } }
          %span.glyphicon.glyphicon-th
          %div.label-main
            Performance drift

        .side-nav-sub
          %ul.no-bullet.inline-list
            %li.first{ ui: { sref: { active: 'active' } } }
              %a{ ui: { sref: 'augur.performance.learning' } }
                %span.glyphicon.glyphicon-tower
            %li{ ui: { sref: { active: 'active' } } }
              %a{ ui: { sref: 'augur.performance.evaluation' } }
                %span.glyphicon.glyphicon-briefcase

          %div.label-sub
            Performance drift

      %li{ ui: { sref: { active: 'active' } } }
        %a{ ui: { sref: 'augur.settings' } }
          %span.glyphicon.glyphicon-th
          %br
          Settings

  .small-10.columns.main
    %div{ ui: { view: '' } }
